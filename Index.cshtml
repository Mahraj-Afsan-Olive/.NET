
@{
    ViewBag.Title = "Index";
}

<h3>@ViewBag.Name</h3>
<h4>@ViewBag.Id</h4>
<h4>@ViewBag.Email</h4>
<h4>@ViewBag.Dob</h4>

<p class="text-danger">
    @Html.ValidationSummary()
</p>

<h2>Form</h2>
<form method="post">
    <input type="text" class="form-control" value="@Model.Name" placeholder="Name" name="Name" />
    <p class="text-danger">@Html.ValidationMessage("Name")</p>
    <input type="text" class="form-control" value="@Model.Id" placeholder="ID eg:22-46824-1" name="Id" />
    <p class="text-danger">@Html.ValidationMessage("Id")</p>
    <input type="date" class="form-control" value="@Model.Dob" placeholder="Dob" name="Dob" />
    <p class="text-danger">@Html.ValidationMessage("Dob")</p>
    <input type="text" class="form-control" value="@Model.Email" placeholder="Email" name="Email" />
    <p class="text-danger">@Html.ValidationMessage("Email")</p>


    <br />
    <input type="submit" value="Add" class="btn btn-primary" />
</form>

